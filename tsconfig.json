{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "module": "Node16",
    "rootDir": "./src",
    "outDir": "./build",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "moduleResolution": "Node16",
    "esModuleInterop": true
  }
}
